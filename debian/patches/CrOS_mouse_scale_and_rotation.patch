+void myScreenSetCrosDisplayProps (ScreenInfo *screen_info, gint x, gint y) {
+    float scale_factor;
+    const float scale_factors[] = {1.0f, 1.0f, 1.25f, 1.33f, 1.4f, 1.5f, 1.8f,
+					2.0f, 2.5f, 3.0f};
